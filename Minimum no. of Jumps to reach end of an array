// Online C++ compiler to run C++ program online
#include <iostream>

int main() {
    // Write C++ code here
    int arr[]={1,3, 5,8,9,2,6,8,9};
    int jump=arr[0],i=0, count=1;
    int n = sizeof(arr)/sizeof(arr[0]);
    while(jump+i<n-1)
    {
        i=jump;
        jump=arr[jump];
        count++;
    } 
    std::cout<<count;

    return 0;
}
